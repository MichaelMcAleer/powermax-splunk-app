<form>
    <label>EDS Directors</label>
    <search id="vmax_24hr_data">
        <query>`vmax_dir` array_id=$array_tok$ director_type=EDS
            director_id=$dir_tok$
            | fields array_id, director_id, percent_busy, random_read_misses,
            random_write_misses, random_read_miss_mbs,
            random_write_miss_mbs
        </query>
        <earliest>$time_tok.earliest$</earliest>
        <latest>$time_tok.latest$</latest>
    </search>
    <fieldset submitButton="false" autoRun="true">
        <input type="dropdown" token="array_tok" searchWhenChanged="true">
            <label>Array ID</label>
            <choice value="*">ALL</choice>
            <search>
                <query>`vmax_array` | dedup array_id | table array_id | sort
                    array_id
                </query>
                <earliest>$time_tok.earliest$</earliest>
                <latest>$time_tok.latest$</latest>
            </search>
            <fieldForLabel>array_id</fieldForLabel>
            <fieldForValue>array_id</fieldForValue>
            <default>*</default>
        </input>
        <input type="dropdown" token="dir_tok" searchWhenChanged="true">
            <label>EDS Director ID</label>
            <choice value="*">ALL</choice>
            <search>
                <query>`vmax_dir` array_id=$array_tok$ director_type=EDS |
                    dedup director_id | table director_id | sort
                    director_id
                </query>
                <earliest>$time_tok.earliest$</earliest>
                <latest>$time_tok.latest$</latest>
            </search>
            <fieldForLabel>director_id</fieldForLabel>
            <fieldForValue>director_id</fieldForValue>
            <default>*</default>
        </input>
        <input type="time" token="time_tok" searchWhenChanged="true">
            <label>Time Frame</label>
            <default>
                <earliest>-24h</earliest>
                <latest>now</latest>
            </default>
        </input>
    </fieldset>
    <row>
        <panel>
            <title>% Busy</title>
            <chart>
                <search base="vmax_24hr_data">
                    <query>timechart avg(percent_busy) by director_id</query>
                </search>
                <option name="charting.axisTitleX.visibility">collapsed
                </option>
                <option name="charting.axisTitleY.visibility">collapsed
                </option>
                <option name="charting.chart">line</option>
                <option name="charting.chart.nullValueMode">zero</option>
                <option name="charting.drilldown">none</option>
            </chart>
        </panel>
        <panel>
            <title>Random Read Misses/sec</title>
            <chart>
                <search base="vmax_24hr_data">
                    <query>timechart avg(random_read_misses) by director_id
                    </query>
                </search>
                <option name="charting.axisTitleX.visibility">collapsed
                </option>
                <option name="charting.axisTitleY.visibility">collapsed
                </option>
                <option name="charting.chart">line</option>
                <option name="charting.chart.nullValueMode">zero</option>
                <option name="charting.drilldown">none</option>
            </chart>
        </panel>
        <panel>
            <title>Random Write Misses/sec</title>
            <chart>
                <search base="vmax_24hr_data">
                    <query>timechart avg(random_write_misses) by director_id
                    </query>
                </search>
                <option name="charting.axisTitleX.visibility">collapsed
                </option>
                <option name="charting.axisTitleY.visibility">collapsed
                </option>
                <option name="charting.chart">line</option>
                <option name="charting.chart.nullValueMode">zero</option>
                <option name="charting.drilldown">none</option>
            </chart>
        </panel>
    </row>
    <row>
        <panel>
            <title>Random Read Miss MBs/sec</title>
            <chart>
                <search base="vmax_24hr_data">
                    <query>timechart avg(random_read_miss_mbs) by director_id
                    </query>
                </search>
                <option name="charting.axisTitleX.visibility">collapsed
                </option>
                <option name="charting.axisTitleY.visibility">collapsed
                </option>
                <option name="charting.chart">line</option>
                <option name="charting.chart.nullValueMode">zero</option>
                <option name="charting.drilldown">none</option>
            </chart>
        </panel>
        <panel>
            <title>Random Write Miss MBs/sec</title>
            <chart>
                <search base="vmax_24hr_data">
                    <query>timechart avg(random_write_miss_mbs) by
                        director_id
                    </query>
                </search>
                <option name="charting.axisTitleX.visibility">collapsed
                </option>
                <option name="charting.axisTitleY.visibility">collapsed
                </option>
                <option name="charting.chart">line</option>
                <option name="charting.chart.nullValueMode">zero</option>
                <option name="charting.drilldown">none</option>
            </chart>
        </panel>
    </row>
    <row>
        <panel>
            <title>EDS Director Summary</title>
            <table>
                <search>
                    <query>`vmax_dir` array_id=$array_tok$ director_type=EDS
                        director_id=$dir_tok$
                        | head 1000 | dedup array_id, director_id
                        | eval r_percent_busy=round(percent_busy,2),
                        r_random_read_misses=round(random_read_misses,2),
                        r_random_write_misses=round(random_write_misses,2),
                        r_random_read_miss_mbs=round(random_read_miss_mbs,2),
                        r_random_write_miss_mbs=round(random_write_miss_mbs,2)
                        | table array_id, director_id, availability,
                        director_number, director_slot_number,
                        num_of_ports, num_of_cores, r_percent_busy,
                        r_random_read_miss_mbs, r_random_read_misses,
                        r_random_write_miss_mbs, r_random_write_misses
                        | sort array_id, director_id
                        | rename array_id as "Array ID", director_id as
                        "Director ID", availability as Availability,
                        director_number as "Director #", director_slot_number
                        as "Director Slot #", num_of_ports as "#
                        of Ports", num_of_cores as "# of Cores", r_percent_busy
                        as "% Busy", r_random_read_miss_mbs as
                        "Random Read Miss MBs/sec", r_random_read_misses as
                        "Random Read Misses/sec",
                        r_random_write_miss_mbs as "Random Write Miss MBs/sec",
                        r_random_write_misses as "Random Write
                        Misses/sec"
                    </query>
                    <earliest>-15m</earliest>
                    <latest>now</latest>
                </search>
                <option name="drilldown">none</option>
            </table>
        </panel>
    </row>
</form>